<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:orientation="vertical">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:tools="http://schemas.android.com/tools"
                  android:layout_width="match_parent"
                  android:layout_height="120dp"
                  android:background="@color/dim_foreground_light_disabled">

    <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/trackCover"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_launcher_full"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tackTitle1"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:textSize="32dp"
        android:textStyle="bold|normal"
        android:singleLine="true"
        android:text="@string/playername"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/trackCover"
        android:paddingLeft="10dp"
        android:layout_toLeftOf="@+id/linearLayout"/>

    <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tackTitle2"
                android:textColor="@color/dim_foreground_inverse_disabled_holo_light"
                android:layout_gravity="center"
                android:textSize="18dp"
                android:text="@string/introrext"
                android:textStyle="normal"
                android:singleLine="true"
                android:layout_below="@+id/tackTitle1"
                android:layout_toRightOf="@+id/trackCover"
                android:paddingLeft="10dp"
                android:layout_toLeftOf="@+id/linearLayout"/>

        <LinearLayout
                android:layout_width="50dp"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:id="@+id/linearLayout"
                android:orientation="vertical"
                android:background="@drawable/click"
                android:onClick="onPlay">

            <ImageView
                    android:id="@+id/playBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_weight="1"
                    android:src="@drawable/ic_media_play"
                    android:focusableInTouchMode="true"
                    />
        </LinearLayout>

    </RelativeLayout>

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/title_events"
            android:id="@+id/textView"
            android:textColor="@color/holo_purple"
            android:layout_gravity="left|center_vertical"
            android:layout_margin="5dip"/>

    <ListView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listEvents"
            android:background="#000000"/>
</LinearLayout>
