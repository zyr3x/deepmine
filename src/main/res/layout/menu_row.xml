<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="2dp"
    android:id="@+id/rowMenu" >

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dip"
            android:id="@+id/imageView" 
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" 
            android:scaleType="centerCrop"
            android:background="#555555"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Заголовок"
            android:id="@+id/textView"
            android:layout_alignParentLeft="true" android:layout_marginLeft="18dp" android:layout_alignParentTop="true"
            android:layout_marginTop="9dp" android:textStyle="bold" android:textSize="24dp"
            android:background="#90000000" android:typeface="normal"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:layout_alignRight="@+id/imageView"
            android:layout_marginRight="18dp"/>
    <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/link"
              android:visibility="gone"/>
     <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/ess_id"
              android:visibility="gone"/>
</RelativeLayout>